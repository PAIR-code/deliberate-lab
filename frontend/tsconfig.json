{
  "compilerOptions": {
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "lib": ["es2021", "dom"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2021",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  }
}
