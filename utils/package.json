{
  "name": "@deliberation-lab/utils",
  "version": "1.0.0",
  "description": "Shared utilities for Deliberation Lab frontend and backend",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "declarations": "tsc --declaration --emitDeclarationOnly",
    "build": "tsup --onSuccess \"npm run declarations\"",
    "build:watch": "tsup --watch --onSuccess \"npm run declarations\"",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "export-schemas": "npx tsx src/export-schemas.ts && npx prettier --write ../docs/assets/api/schemas.json"
  },
  "files": [
    "dist/**/*"
  ],
  "peerDependencies": {
    "@sinclair/typebox": "^0.34.47",
    "firebase": "^12.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/mustache": "^4.2.6",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "babel-jest": "^30.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "picomatch": "^4.0.3",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "jsonrepair": "^3.13.1",
    "mustache": "^4.2.0",
    "process": "^0.11.10"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testTimeout": 15000
  }
}
