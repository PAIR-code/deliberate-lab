{
  "name": "@deliberation-lab/utils",
  "version": "1.0.0",
  "description": "Shared utilities for Deliberation Lab frontend and backend",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "declarations": "tsc --declaration --emitDeclarationOnly",
    "build": "tsup --onSuccess \"npm run declarations\"",
    "build:watch": "tsup --watch --onSuccess \"npm run declarations\"",
    "test": "jest"
  },
  "files": [
    "dist/**/*"
  ],
  "peerDependencies": {
    "@sinclair/typebox": "^0.32.30",
    "firebase": "^10.11.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "babel-jest": "^29.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "crypto-browserify": "^3.12.0",
    "process": "^0.11.10",
    "uuidv4": "^6.2.13"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testTimeout": 15000
  }
}
