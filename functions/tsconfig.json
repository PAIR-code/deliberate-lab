{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@deliberation-lab/utils": ["../utils/dist"] // Makes `tsc --watch` also watch changes in the utils package
    },
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "types": ["jest", "node"]
}
