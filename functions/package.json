{
  "name": "functions",
  "scripts": {
    "preinstall": "node -e \"if (process.env.INIT_CWD === process.cwd()) { console.warn('\\n\\x1b[33mWarning: Consider running npm install from the repository root.\\x1b[0m\\nTo add a package to functions/, run:\\n  npm install <pkg> -w functions\\nfrom the root directory.\\n'); }\"",
    "lint": "eslint",
    "build": "node build.js",
    "build:watch": "node build.js --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run test:unit && npm run test:firestore",
    "test:firestore": "firebase -c ../firebase-test.json emulators:exec --only firestore,functions --project=demo-deliberate-lab \"npx jest --runInBand $npm_package_config_firestore_tests\"",
    "test:unit": "npx jest --testPathIgnorePatterns=$npm_package_config_firestore_tests",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "22"
  },
  "config": {
    "firestore_tests": "src/log.utils.test.ts src/dl_api/experiments.dl_api.integration.test.ts src/dl_api/cohorts.dl_api.integration.test.ts src/variables.utils.test.ts src/cohort_definitions.integration.test.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.23",
    "@ai-sdk/google": "^3.0.13",
    "@ai-sdk/openai": "^3.0.19",
    "@deliberation-lab/utils": "file:../utils",
    "@sinclair/typebox": "^0.34.48",
    "ai": "^6.0.49",
    "crypto-browserify": "^3.12.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3",
    "firebase-tools": "^15.4.0",
    "jest": "^30.2.0",
    "ollama-ai-provider-v2": "^3.0.2",
    "unique-names-generator": "^4.7.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testTimeout": 15000,
    "moduleNameMapper": {
      "^@deliberation-lab/utils$": "<rootDir>/../utils/src"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "babel-jest": "^30.2.0",
    "esbuild": "0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "firebase": "^12.8.0",
    "firebase-functions-test": "^3.4.1",
    "nock": "^14.0.10",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "private": true
}
