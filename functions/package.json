{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "esbuild src/index.ts --bundle --outdir=lib --platform=node --target=node18 --external:farmhash",
    "build:watch": "esbuild src/index.ts --bundle --outdir=lib --platform=node --target=node18 --external:farmhash --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@deliberation-lab/utils": "file:../utils",
    "@google/generative-ai": "^0.17.2",
    "@sinclair/typebox": "^0.32.30",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0",
    "unique-names-generator": "^4.7.1",
    "uuid": "^9.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testTimeout": 15000
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-jest": "^29.7.0",
    "esbuild": "0.21.5",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "firebase-functions-test": "^3.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.0"
  },
  "private": true
}
